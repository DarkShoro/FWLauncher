<section id="library" class="overflow-hidden h-[90vh]" style="display: none;">
    <!-- Cut the library into a 1/3 and 2/3 section (browser and game) -->
    <div class="flex flex-col md:flex-row gap-4 p-4 h-full">
        <!-- Left Section: Browser -->
        <div class="md:w-1/4 bg-black/50 p-4 rounded-lg shadow-lg overflow-auto">
            <h2 class="text-xl font-bold mb-4">Bibliothèque de jeux</h2>
            <input type="text" placeholder="Search games..."
                class="w-full p-2 mb-4 bg-black/70 text-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            <div class="flex flex-col gap-2 text-ellipsis" id="gameList">
                <!-- Add more game items as needed -->
            </div>
        </div>

        <!-- Right Section: Game Details -->
        <div class="relative md:w-3/4 bg-black/50 p-4 rounded-lg shadow-lg overflow-auto text-white px-10">

            <div id="gameLibOverview">

                <!-- Background Banner -->
                <div class="absolute inset-0 h-1/2 pointer-events-none z-0">
                    <div class="w-full h-full bg-cover bg-center" id="gameLibOverview-background"
                        style="mask: linear-gradient(to top, transparent 0%, rgba(0,0,0,1) 100%); -webkit-mask: linear-gradient(to top, transparent 0%, rgba(0,0,0,1) 100%);">
                        <!-- Blackening overlay for text readability -->
                        <div class="absolute inset-0 bg-black/40"></div>
                    </div>
                </div>

                <!-- Content above the background -->
                <div class="relative z-10">
                    <h2 class="text-xl font-bold mb-4 text-center">Détails du jeu</h2>
                    <!-- Game header with left and right side -->
                    <div class="flex justify-between items-center mb-4">
                        <div class="flex items-center gap-4">
                            <img src="assets/images/stock/Foxtale.png" alt="Game Icon" id="gameLibOverview-titleImg"
                                class="h-32 rounded-lg shadow-lg">

                        </div>
                        <div class="flex items-center gap-4">
                            <!-- Game Action Buttons -->
                            <div id="gameButtons" class="flex items-center gap-4">
                                <button class="w-full mt-6 fws-btn fws-btn-block fws-btn-md fws-btn-nox"
                                    id="gameoptions">Options</button>
                                <button class="w-full mt-6 fws-btn fws-btn-block fws-btn-md"
                                    id="download">Telecharger</button>
                                <button class="w-full mt-6 fws-btn fws-btn-block fws-btn-md" id="play"
                                    style="display: none;">
                                    Jouer</button>

                            </div>

                            <!-- Download Progress Bar (Hidden by default) -->
                            <div id="downloadProgress"
                                class="w-full mt-6 flex items-center gap-4 bg-gray-700 rounded-lg p-4"
                                style="display: none;">
                                <span class="text-sm text-gray-300 whitespace-nowrap">Téléchargement:</span>
                                <div class="flex-1 bg-gray-600 rounded-full h-2">
                                    <div class="bg-blue-500 h-2 rounded-full transition-all duration-300 ease-out"
                                        id="downloadBar" style="width: 0%"></div>
                                </div>
                                <span class="text-sm text-gray-300 whitespace-nowrap" id="downloadPercent">0%</span>
                                <span class="text-xs text-gray-400 whitespace-nowrap" id="downloadSize">0 MB / 0
                                    MB</span>
                                <button class="fws-btn fws-btn-sm fws-btn-danger whitespace-nowrap"
                                    id="cancelDownload">Annuler</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</section>